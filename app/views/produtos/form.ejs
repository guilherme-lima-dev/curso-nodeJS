<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <h1>Cadastro de Livros</h1>
    <div class="erros">
        <ul>
            <%if(errosValidacao){%>
            <%for(var i=0; i<errosValidacao.length; i++){%>
                <li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
            <%}%>
            <%}%>
        </ul>
    </div>
    <form action="/produtos" method="post">
        <input type="text" name="titulo" value="<%=produtos.titulo%>" placeholder="Digite o titulo..."> <br>

        <input type="text" name="preco" value="<%=produtos.preco%>" placeholder="Digite o preço..."> <br>

        <textarea cols="21" rows="5" name="descricao" placeholder="Digite a descrição..."><%=produtos.descricao%></textarea> <br><br>

        <input type="submit" value="Cadastrar">
    </form>
</body>
</html>